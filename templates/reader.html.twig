<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>flipbook</title>
	<script type="text/javascript" src={{asset('build/jquery.min.1.7.js')}}></script>
	<script type="text/javascript" src={{asset('build/modernizr.2.5.3.min.js')}}></script>
	<style>
	body{
		background: rgb(61, 61, 61);
	}
	</style>

</head>
<body>


<form action="post">
	<div class="flipbook-viewport">
		<div class="container">
			<div class="flipbook">
				<div style="background-image:url({{cover}})"></div>
				<div style="background-image:url()"></div>
				{% set i = 0 %}
				{% for image in images %}
					<div style="background-image:url({{asset(image)}})">
						<a href="/gallery/{{document}}/{{i}}">Load audio</a>
						<audio src={{asset("audio/" ~ title ~ "/page_" ~ i ~ ".mp3")}} controls='controls'></audio>
					</div>
					{% set i = i + 1 %}
				{% endfor %}
				<div style="background-image:url()"></div>
			</div>
		</div>
	</div>
	<a href="/gallery/{{document}}/read/more">Load more Pages</a>
</form>				
	<script type="text/javascript">

function loadApp() {

	// Create the flipbook

	$('.flipbook').turn({
			// Width

			width:922,
			
			// Height

			height:600,

			// Elevation

			elevation: 50,
			
			// Enable gradients

			gradients: true,
			
			// Auto center this flipbook

			autoCenter: true

	});
}

// Load the HTML4 version if there's not CSS transform

yepnope({
	test : Modernizr.csstransforms,
	yep: ["{{asset('build/turn.js')}}"],
	nope: ["{{asset('build/turn.html4.min.js')}}"],
	both: ["{{asset('build/basic.css')}}"],
	complete: loadApp
});

</script>
</body>
</html>