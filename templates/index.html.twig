{% extends "base.html.twig" %}
{% block stylesheets %}
<style>


.welcome{
    display:flex;
    justify-content: center;
    margin-top: 70px;
}

h1{
    font-size: 50px;
    font-weight: 5;
}

.slogan {
    display:flex;
    justify-content: center;
    font-size: 20px;
    margin-top: 15px;
}
.covers{
    display: flex;
    justify-content: center;
    margin-top: 30px;

}

img{
    margin-left: 40px;
    margin-right: 40px;
    transition: all 0.4s ease-in-out;
}

img:hover{
      transform: scale(1.2);
}

</style>

{% endblock %}
{% block body %}
    <div class='welcome'>
        <h1>Welcome to BookWorm !</h1>
    </div>
    <div class="slogan">
        <p>The home for all your online e-books</p>
    </div>
    <div class="covers">
        <img src={{asset('/images/untitled.png')}} alt="">
        <img src={{asset('/images/untitled2.png')}} alt="">  
        <img src={{asset('/images/untitled3.png')}} alt="">
    </div>
{% endblock %}